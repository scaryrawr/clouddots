#!/usr/bin/env bash

# Find the real az, skipping this shim to avoid recursive calls
REAL_AZ=""
for p in $(type -aP az); do
  if [ "$p" != "${BASH_SOURCE[0]}" ] && [ "$p" != "$(readlink -f "${BASH_SOURCE[0]}")" ]; then
    REAL_AZ="$p"
    break
  fi
done

if [ -z "$REAL_AZ" ]; then
  echo "Error: could not find real az CLI" >&2
  exit 1
fi

# Check if we have auth helper, if not, just call az directly
AUTH_HELPER="$HOME/ado-auth-helper"
if command -v "$AUTH_HELPER" &> /dev/null; then
  AZURE_DEVOPS_EXT_PAT=$($AUTH_HELPER get-access-token) "$REAL_AZ" "$@"
else
  exec "$REAL_AZ" "$@"
fi