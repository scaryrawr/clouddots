#!/usr/bin/env bash

# Find the real npx, skipping this shim to avoid recursive calls
REAL_NPX=""
for p in $(type -aP npx); do
  if [ "$p" != "${BASH_SOURCE[0]}" ] && [ "$p" != "$(readlink -f "${BASH_SOURCE[0]}")" ]; then
    REAL_NPX="$p"
    break
  fi
done

if [ -z "$REAL_NPX" ]; then
  echo "Error: could not find real npx CLI" >&2
  exit 1
fi

# Rebuild PATH without the shim directory to prevent recursive calls
shim_dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
IFS=':' read -r -a path_parts <<< "$PATH"
new_path=()
for p in "${path_parts[@]}"; do
  [[ -n "$p" && "$p" != "$shim_dir" ]] && new_path+=("$p")
done
PATH=$(IFS=':'; printf '%s' "${new_path[*]}")
export PATH

# Check if we have auth helper, if not, just call npx directly
AUTH_HELPER="$HOME/ado-auth-helper"
if command -v "$AUTH_HELPER" &> /dev/null; then
  ARTIFACTS_ACCESSTOKEN=$($AUTH_HELPER get-access-token) "$REAL_NPX" "$@"
else
  exec "$REAL_NPX" "$@"
fi
