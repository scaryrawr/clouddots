#!/usr/bin/env bash

# Find the real pnpx, skipping this shim to avoid recursive calls
REAL_PNPX=""
for p in $(type -aP pnpx); do
  if [ "$p" != "${BASH_SOURCE[0]}" ] && [ "$p" != "$(readlink -f "${BASH_SOURCE[0]}")" ]; then
    REAL_PNPX="$p"
    break
  fi
done

if [ -z "$REAL_PNPX" ]; then
  echo "Error: could not find real pnpx CLI" >&2
  exit 1
fi

# Check if we have auth helper, if not, just call pnpx directly
AUTH_HELPER="$HOME/ado-auth-helper"
if command -v "$AUTH_HELPER" &> /dev/null; then
  ARTIFACTS_ACCESSTOKEN=$($AUTH_HELPER get-access-token) "$REAL_PNPX" "$@"
else
  exec "$REAL_PNPX" "$@"
fi
